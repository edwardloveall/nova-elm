{
  "identifier": "hansjhoffman.elm",
  "name": "Elm",
  "author": "Hans Hoffman",
  "organization": "@hansjhoffman",
  "description": "Elm syntax highlighting, code completions and Language Server support.",
  "version": "0.1.0",
  "categories": ["commands", "completions", "formatters", "languages"],
  "license": "MIT",
  "repository": "https://github.com/hansjhoffman/nova-elm",
  "bugs": {
    "url": "https://github.com/hansjhoffman/nova-elm/issues"
  },

  "main": "main.dist.js",

  "activationEvents": ["onLanguage:elm", "onWorkspaceContains:elm.json"],

  "entitlements": {
    "process": true,
    "filesystem": "readwrite"
  },

  "config": [
    {
      "key": "hansjhoffman.elm.config.formatOnSave",
      "title": "Format on save",
      "description": "When saving, use `elm-format` to format document. Requires the `elm-format` binary path to be set.",
      "type": "boolean",
      "default": false
    },
    {
      "key": "hansjhoffman.elm.config.elmFormatPath",
      "title": "elm-format binary",
      "type": "path"
    }
  ],

  "configWorkspace": [
    {
      "key": "hansjhoffman.elm.config.formatDocumentOnSave",
      "title": "Format document on save",
      "description": "Run Format Document command on file save.",
      "type": "boolean",
      "values": [
        ["null", "Inherit from Global Settings"],
        ["false", "Disable"],
        ["true", "Enable"]
      ],
      "default": "null"
    },
    {
      "key": "hansjhoffman.elm.config.elmFormatPath",
      "title": "elm-format binary",
      "type": "path",
      "relative": true
    }
  ],

  "commands": {
    "editor": [
      {
        "title": "Jump to Definition",
        "command": "elm.command.jumpToDefinition",
        "when": "editorHasFocus",
        "filters": {
          "syntaxes": ["elm"]
        }
      },
      {
        "title": "Format Document",
        "command": "elm.command.formatDocument",
        "when": "editorHasFocus",
        "filters": {
          "syntaxes": ["elm"]
        }
      }
    ]
  }
}
